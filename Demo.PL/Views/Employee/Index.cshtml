@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<form asp-action="Index" class="mb-4">
    <div class="row laign-items-center justify-content-center">
        <div class="col-8">
            <input type="text" placeholder="SearchByame" class="form-control" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>

    </div>

</form>

<a asp-action="Create" class="btn btn-primary">Create new Employee </a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.Age)</th>
                <th>@Html.DisplayNameFor(D=>D.Address)</th>
                <th>@Html.DisplayNameFor(D=>D.Image)</th>
                <th>@Html.DisplayNameFor(D=>D.DepartmentId)</th>
                <th>@Html.DisplayNameFor(D=>D.Salary)</th>
                <th>@Html.DisplayNameFor(D=>D.IsActive)</th>
                <th>@Html.DisplayNameFor(D=>D.Email)</th>
                <th>@Html.DisplayNameFor(D=>D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D=>D.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M=>@employee.Name)</td>
                    <td>@Html.DisplayFor(M=>employee.Age)</td>
                    <td>@Html.DisplayFor(M=>employee.Address)</td>
                    <td><img src="~/files/imgs/@employee.ImageName" class="img-fluid" height="20"   width="20"  /></td>
                    <td>@Html.DisplayFor(M=>employee.Department.Name)</td>
                    <td>@Html.DisplayFor(M=>employee.Salary)</td>
                    <td>@Html.DisplayFor(M=>employee.IsActive)</td>
                    <td>@Html.DisplayFor(M=>employee.Email)</td>
                    <td>@Html.DisplayFor(M=>employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M=>employee.HireDate)</td>

                    <partial name="_ButtonsPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Employees  </h3>
    </div>
}