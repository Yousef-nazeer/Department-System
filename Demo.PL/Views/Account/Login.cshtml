@model LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "_AuthLayout";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form method="post" asp-action="Login">
			<div asp-validation-summary="All"></div>
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<br />



			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me ? </span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Don't you have an Account? <a asp-action="Register"> Register  Now!</a></p>
		<p>Forger Password? <a asp-action="ForgetPassword"> Forger Password>?</a></p>
	</div>
</div>

@section ValidationSection{
	<partial name="_ValidationScriptsPartial" />
}

