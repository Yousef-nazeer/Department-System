@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<form asp-action="Create">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
        <span asp-validation-for="Code"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input type="text" class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation"></span>
    </div>
    
    <input type="submit" value="submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to List</a>

</form>
@section ValidationSection{
    <partial name="_ValidationScriptsPartial" />
}

