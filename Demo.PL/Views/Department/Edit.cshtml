@model Department
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Department</h1>
<br />
<br />

<form asp-action="Edit">
    <input hidden asp-for="Id" />
    <div asp-validation-summary="All" ></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
        <span asp-validation-for="Code"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input type="text" class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation"></span>
    </div>

    
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to List</a>

</form>

@section ValidationSection{
    <partial name="_ValidationScriptsPartial" />
}
