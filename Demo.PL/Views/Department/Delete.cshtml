@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure that you want to delete this Department?</h1>

<form asp-action="Delete">
     

      <div class="form-group">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input type="text" class="form-control" asp-for="Code" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input type="text" class="form-control" asp-for="DateOfCreation" readonly />
    </div>

    <input
        type = "submit" value="Delete" class="btn btn-danger">
        |
    <a asp-action="Index" class="btn btn-light">
        Cancel
    </a>
</form>

